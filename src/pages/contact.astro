---
import BaseLayout from '../layouts/BaseLayout.astro';
import siteConfig from '../data/site-config';
---

<BaseLayout description={siteConfig.description} image={siteConfig.image}>
  <div class="mb-16 sm:mb-24 lg:max-w-5xl max-w-full mx-auto">
    <div class="mx-auto max-w-2xl text-center mb-12 sm:mb-16 py-8 sm:py-10">
      <h1 class="text-4xl sm:text-5xl lg:text-6xl font-sans font-semibold mb-6">
        Get in touch
      </h1>
      <p class="text-xl sm:text-2xl text-main opacity-80">
        Working on big scientific questions in genetics?<br />
        Just want to talk about taming messy data?<br />
        I'd love to hear from you!
      </p>
    </div>
    <form
      name="contact"
      method="POST"
      class="mx-auto max-w-2xl"
      data-netlify="true"
    >
      <div class="grid grid-cols-1 gap-x-6 gap-y-6 sm:grid-cols-2">
        <div class="sm:col-span-2">
          <label
            for="full-name"
            class="block text-xl sm:text-2xl font-sans font-medium mb-2"
            >Full Name</label
          >
          <input
            id="full-name"
            type="text"
            name="full-name"
            autocomplete="full-name"
            class="block w-full rounded-md bg-muted text-main px-4 py-2.5 border border-main focus:outline-none focus:ring-2 focus:ring-main focus:ring-offset-2 transition"
          />
        </div>
        <div class="sm:col-span-2">
          <label
            for="company"
            class="block text-xl sm:text-2xl font-sans font-medium mb-2"
            >Company (Optional)</label
          >
          <input
            id="company"
            type="text"
            name="company"
            autocomplete="organization"
            class="block w-full rounded-md bg-muted text-main px-4 py-2.5 border border-main focus:outline-none focus:ring-2 focus:ring-main focus:ring-offset-2 transition"
          />
        </div>
        <div class="sm:col-span-2">
          <label
            for="email"
            class="block text-xl sm:text-2xl font-sans font-medium mb-2"
            >Email</label
          >
          <input
            id="email"
            type="email"
            name="email"
            autocomplete="email"
            class="block w-full rounded-md bg-muted text-main px-4 py-2.5 border border-main focus:outline-none focus:ring-2 focus:ring-main focus:ring-offset-2 transition"
          />
        </div>
        <div class="sm:col-span-2">
          <label
            for="message"
            class="block text-xl sm:text-2xl font-sans font-medium mb-2"
            >Message</label
          >
          <textarea
            id="message"
            name="message"
            rows="6"
            class="block w-full rounded-md bg-muted text-main px-4 py-2.5 border border-main focus:outline-none focus:ring-2 focus:ring-main focus:ring-offset-2 transition resize-none"
          ></textarea>
        </div>
      </div>
      <div class="mt-8">
        <button
          type="submit"
          class="w-full px-8 py-3 text-xl sm:text-2xl font-sans font-medium bg-transparent text-main border-2 border-main rounded-xl transition-all duration-200 hover:bg-main hover:text-bg-main hover:scale-105 focus:outline-none focus:ring-2 focus:ring-main focus:ring-offset-2"
        >
          Send Message
        </button>
      </div>
    </form>
  </div>
</BaseLayout>
