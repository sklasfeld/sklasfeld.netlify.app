---
import ArrowRight from '../icons/ArrowRight.astro';
import FormattedDate from './FormattedDate.astro';

type Props = {
  series: {
    name: string;
    slug: string;
    postCount: number;
    latestDate: Date;
    firstDate: Date;
    image?: { src: string; alt?: string };
  };
  class?: string;
  headingLevel?: 'h2' | 'h3';
};

const { series, class: className, headingLevel = 'h2' } = Astro.props;
const TitleTag = headingLevel;
---

<a
  class:list={[
    'flex flex-row group',
    'rounded-lg border-2 border-accent/40 dark:border-accent/30',
    'bg-white dark:bg-gray-800/50',
    'shadow-sm hover:shadow-md',
    'transition-all duration-200',
    'hover:-translate-y-1 hover:border-accent',
    'overflow-hidden',
    className
  ]}
  href={`/blog/${series.slug}/`}
>
  {series.image && (
    <img
      src={series.image.src}
      alt={series.image.alt || ''}
      class="w-48 h-48 sm:w-56 sm:h-56 object-cover shrink-0"
    />
  )}
  <div class="flex justify-between items-start gap-6 p-6 grow min-w-0">
    <div class="grow min-w-0">
      <div class="inline-block px-2 py-0.5 mb-2 text-xs font-semibold uppercase tracking-wider bg-accent/10 text-accent rounded">
        {series.postCount}-part series
      </div>
      <TitleTag class="text-2xl leading-tight font-sans font-semibold text-accent group-hover:underline group-hover:underline-offset-4 sm:text-3xl">
        {series.name}
      </TitleTag>
      <div class="mt-3 text-base opacity-60">
        <FormattedDate date={series.firstDate} /> &ndash; <FormattedDate date={series.latestDate} />
      </div>
    </div>
    <div class="font-sans text-base opacity-60 transition-all group-hover:opacity-100 group-hover:translate-x-1 inline-flex gap-1 items-center shrink-0">
      View <ArrowRight class="fill-current w-4 h-4" aria-hidden="true" />
    </div>
  </div>
</a>
