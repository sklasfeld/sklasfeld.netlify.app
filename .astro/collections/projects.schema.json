{
  "$ref": "#/definitions/projects",
  "definitions": {
    "projects": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "timeperiod": {
          "type": "string"
        },
        "company": {
          "type": "string"
        },
        "headerImage": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "object",
              "properties": {
                "light": {
                  "type": "string"
                },
                "dark": {
                  "type": "string"
                },
                "alt": {
                  "type": "string"
                },
                "caption": {
                  "type": "string"
                },
                "longDescription": {
                  "type": "string"
                }
              },
              "required": [
                "light",
                "dark"
              ],
              "additionalProperties": false
            }
          ]
        },
        "description": {
          "type": "string"
        },
        "publishDate": {
          "anyOf": [
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "string",
              "format": "date"
            },
            {
              "type": "integer",
              "format": "unix-time"
            }
          ]
        },
        "isFeatured": {
          "type": "boolean",
          "default": false
        },
        "publications": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "title": {
                "type": "string"
              },
              "url": {
                "type": "string",
                "format": "uri"
              },
              "authors": {
                "type": "string"
              },
              "venue": {
                "type": "string"
              },
              "year": {
                "type": "number"
              }
            },
            "required": [
              "title",
              "url"
            ],
            "additionalProperties": false
          }
        },
        "relevantPublications": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "title": {
                "type": "string"
              },
              "url": {
                "type": "string",
                "format": "uri"
              },
              "authors": {
                "type": "string"
              },
              "venue": {
                "type": "string"
              },
              "year": {
                "type": "number"
              }
            },
            "required": [
              "title",
              "url"
            ],
            "additionalProperties": false
          }
        },
        "presentations": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "title": {
                "type": "string"
              },
              "authors": {
                "type": "string"
              },
              "type": {
                "type": "string"
              },
              "venue": {
                "type": "string"
              },
              "location": {
                "type": "string"
              },
              "date": {
                "type": "string"
              }
            },
            "required": [
              "title"
            ],
            "additionalProperties": false
          }
        },
        "references": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "label": {
                "type": "string"
              },
              "url": {
                "type": "string",
                "format": "uri"
              }
            },
            "required": [
              "label",
              "url"
            ],
            "additionalProperties": false
          }
        },
        "seo": {
          "type": "object",
          "properties": {
            "title": {
              "type": "string",
              "minLength": 5,
              "maxLength": 120
            },
            "timeperiod": {
              "type": "string",
              "minLength": 5,
              "maxLength": 120
            },
            "company": {
              "type": "string",
              "minLength": 5,
              "maxLength": 120
            },
            "description": {
              "type": "string",
              "minLength": 15,
              "maxLength": 160
            },
            "image": {
              "type": "object",
              "properties": {
                "src": {
                  "type": "string"
                },
                "alt": {
                  "type": "string"
                }
              },
              "required": [
                "src"
              ],
              "additionalProperties": false
            },
            "pageType": {
              "type": "string",
              "enum": [
                "website",
                "article"
              ],
              "default": "website"
            }
          },
          "additionalProperties": false
        },
        "$schema": {
          "type": "string"
        }
      },
      "required": [
        "title",
        "publishDate"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}